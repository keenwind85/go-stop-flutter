{
  "rules": {
    "users": {
      ".indexOn": ["wallet/coin", "wallet/total_earned", "wallet/gwangkki_score", "wallet/stored_coin"],
      ".read": "auth != null",

      "$uid": {
        ".write": "auth != null && auth.uid == $uid",

        "wallet": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['coin']) && newData.child('coin').isNumber() && newData.child('coin').val() >= 0 && (!newData.hasChild('stored_coin') || (newData.child('stored_coin').isNumber() && newData.child('stored_coin').val() >= 0))"
        },

        "items": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        },

        "inventory": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        },

        "daily_actions": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        },

        "profile": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        },

        "settings": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid",
          ".validate": "(!newData.hasChild('custom_nickname') || (newData.child('custom_nickname').isString() && newData.child('custom_nickname').val().length <= 10)) && (!newData.hasChild('sound_enabled') || newData.child('sound_enabled').isBoolean())"
        }
      }
    },

    "shop": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "global": {
      "item_shop": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "rooms": {
      ".indexOn": ["state", "createdAt"],
      ".read": "auth != null",
      ".write": "auth != null",

      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",

        "rematch_vote": {
          ".read": "auth != null",
          ".write": "auth != null"
        },

        "settlement": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
